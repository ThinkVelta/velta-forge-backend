import logging
from collections.abc import AsyncGenerator
from contextlib import asynccontextmanager

from fastapi import FastAPI

from {{ project_name_snake_case }}.api.basemodels import HealthResponse


@asynccontextmanager
async def lifespan(app: FastAPI) -> AsyncGenerator[None]:
    """Handle FastAPI startup and shutdown events."""
    # Startup events.
    for handler in list(logging.root.handlers):
        logging.root.removeHandler(handler)

    yield
    # Shutdown events.


app = FastAPI(
    title="{{ project_name | replace('"', '\\"') }} API",
    description="{{ project_description | replace('"', '\\"') }}",
    docs_url="/",
    lifespan=lifespan,
)


@app.get(
    "/health",
    summary="Health check",
    description="Perform a basic health check to confirm the API is responsive.",
    responses={
        200: {
            "description": "Service is healthy",
            "content": {"application/json": {"example": {"status": "ok"}}},
        }
    },
)
async def health() -> HealthResponse:
    """Return a simple health status payload."""
    return HealthResponse(status="ok")
